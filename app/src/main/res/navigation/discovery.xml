<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/discovery"
    app:startDestination="@id/discoveryFragment">

    <fragment
        android:id="@+id/discoveryFragment"
        android:name="io.aethibo.fireshare.features.discovery.view.DiscoveryFragment"
        android:label="DiscoveryFragment"
        tools:layout="@layout/fragment_discovery">
        <action
            android:id="@+id/action_discovery_to_profile"
            app:destination="@id/othersProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/othersProfileFragment"
        android:name="io.aethibo.fireshare.features.profile.view.OthersProfileFragment"
        android:label="OthersProfileFragment"
        tools:layout="@layout/fragment_profile">
        <argument
            android:name="user"
            app:argType="io.aethibo.fireshare.core.entities.User" />
        <action
            android:id="@+id/action_othersProfileFragment_to_detailPostFragment"
            app:destination="@id/detailPostFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailPostFragment"
        android:name="io.aethibo.fireshare.features.singlepost.view.DetailPostFragment"
        android:label="DetailPostFragment"
        tools:layout="@layout/layout_item_post">

        <argument
            android:name="post"
            app:argType="io.aethibo.fireshare.core.entities.Post" />
    </fragment>
</navigation>